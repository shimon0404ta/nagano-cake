<div class="container">
  <div class="row py-4">
    <h5>商品詳細</h5>
  </div>

  <div class="row py-4">
    <div class="col-lg-4">
      <%= image_tag @item.get_item_image(300,200) %>
    </div>

    <div class="col-lg-8">
      <div class="row">
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td>商品名</td>
              <td><%= @item.name %></td>
            </tr>
            <tr>
              <td>商品説明</td>
              <td><%= @item.introduction %></td>
            </tr>
            <tr>
              <td>ジャンル</td>
              <td><%= @item.genre.genre %></td>
            </tr>
            <tr>
              <td>税込価格<br>(税抜価格)</td>
              <td>
                <h5><%= (@item.price*1.1).floor.to_s(:delimited) %> (<%= @item.price.to_s(:delimited) %>) 円</h5>
              </td>
            </tr>
            <tr>
              <td>
                <div class="text-nowrap">販売ステータス</div></td>
              <td>
                <% if @item.status == false %>
                  <p class="text-secondary">販売停止中</p>
                <% else %>
                  <p class="text-success">販売中</p>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <div class="col-lg-5"></div>
      <%= link_to "編集する", edit_admin_item_path(@item), class:"btn btn-success btn-lg" %>
    </div>
  </div>
</div>
