<div class="container">
  <div class="row py-4">
    <div class="col-4">
      <h2>会員一覧</h2>
    </div>
  </div>

  <div class="row py-4">
    <table class="table" border="1">
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>

      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td><%= link_to customer.last_name + customer.first_name, admin_customer_path(customer.id) %></td>
          <td><%= customer.email %></td>
          <td><% if customer.is_deleted == true %>
              <p class="text-secondary">退会済</p>
            <% else %>
              <p class="text-success">有効</p>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>